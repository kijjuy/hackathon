@using Microsoft.AspNetCore.Identity;
@using hackathon.Models;
@inject UserManager<ApplicationUser> userManager;
@model UserViewModel;

@{
    ViewData["Title"] = "Home Page";
}

@{
    var user_from_manager = await userManager.GetUserAsync(User);
    var description = user_from_manager.Description;
}

<div class="text-center">
    <h2>Update your profile:</h2>

    <form asp-controller="Home" asp-action="UpdateProfile" enctype="application/x-www-form-urlencoded" >
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Description" class="control-label" name="descripton-field"></label>
        <textarea asp-for="Description" class="form-control" aria-required="true">Something</textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Update Profile" />
    </div>
    </form>
</div>
